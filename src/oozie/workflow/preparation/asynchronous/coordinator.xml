<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<coordinator-app name="preparation_coord_job" start="${startTime}" end="${endTime}" frequency="${coord:days(1)}"  timezone="GMT" xmlns="uri:oozie:coordinator:0.4">
	<datasets> 
		<dataset name="ds_fileload" frequency="${coord:days(1)}" initial-instance="${startTime}" timezone="GMT"> 
			<uri-template> 
				${appBaseDirDS}/fileload/asynchronous/${YEAR}-${MONTH}-${DAY} 
			</uri-template> 
		</dataset>
	</datasets>
	<input-events> 
		<data-in name="event_fileload" dataset="ds_fileload"> 
			<instance>${coord:current(0)}</instance>
		</data-in> 
	</input-events>	
	<action>
		<workflow>
			<app-path>${appBaseDir}/preparation/asynchronous/</app-path>
			<configuration>
				<property> 
					<name>runDate</name> 
					<value>${coord:formatTime(coord:nominalTime(),"yyyy-MM-dd")}</value> 
				</property>
			</configuration>
		</workflow>
   </action>
</coordinator-app>